@model IEnumerable<COM5005.Web.Models.Product>
@{
    ViewBag.Title = "√úr√ºnler";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var favs = ViewBag.Favs as System.Collections.Generic.IList<int>;
    bool isLogged = (bool)(ViewBag.IsLogged ?? false);
}
<h1>√úr√ºnler</h1>

<form class="row g-2 mb-3" method="get">
  <div class="col-md-6"><input class="form-control" name="q" value="@(ViewBag.Q ?? "")" placeholder="Ara (√∂rn: filtre, cheesecake)"/></div>
  <div class="col-md-3">
    <select class="form-select" name="category">
      <option value="">Kategori</option>
      <option value="coffee" @(ViewBag.Category=="coffee"?"selected":"")>Kahve</option>
      <option value="dessert" @(ViewBag.Category=="dessert"?"selected":"")>Tatlƒ±</option>
      <option value="accessory" @(ViewBag.Category=="accessory"?"selected":"")>Aksesuar</option>
    </select>
  </div>
  <div class="col-md-3">
    <select class="form-select" name="sort">
      <option value="">Sƒ±rala</option>
      <option value="price_asc" @(ViewBag.Sort=="price_asc"?"selected":"")>Fiyat (Artan)</option>
      <option value="price_desc" @(ViewBag.Sort=="price_desc"?"selected":"")>Fiyat (Azalan)</option>
      <option value="name_asc" @(ViewBag.Sort=="name_asc"?"selected":"")>ƒ∞sim (A‚ÄëZ)</option>
    </select>
  </div>
</form>

<div class="row row-cols-1 row-cols-md-3 g-3">
@foreach (var p in Model)
{
  var isFav = favs != null && favs.Contains(p.Id);
  <div class="col">
    <div class="card h-100">
      <div class="card-body">
        <div class="display-5 text-center">@Html.Raw(p.Emoji ?? "üõçÔ∏è")</div>
        <h5 class="card-title">@p.Name</h5>
        <p class="text-muted">@p.Description</p>
        <div class="d-flex justify-content-between">
          <strong>@p.Price.ToString("C")</strong>
          <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" href="@Url.Action("Details","Products", new { id = p.Id })">Detay</a>
            @if(isLogged){
              using (Html.BeginForm("AddToCart","Products", FormMethod.Post, new { @class="d-inline"}))
              { @Html.Hidden("id", p.Id) <button class="btn btn-primary">Sepete Ekle</button> }
              using (Html.BeginForm("ToggleFav","Products", FormMethod.Post, new { @class="d-inline"}))
              { @Html.Hidden("id", p.Id) <button class="btn btn-outline-danger">@((isFav)?"‚ô•":"‚ô°")</button> }
            } else {
              <a class="btn btn-primary" href="@Url.Action("Login","Account", new { returnUrl = Url.Action("Index","Cart") })">Giri≈ü Yap</a>
            }
          </div>
        </div>
      </div>
    </div>
  </div>
}
</div>
