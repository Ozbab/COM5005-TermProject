@model IEnumerable<COM5005.Web.Models.Product>
@{
    ViewBag.Title = "Favoriler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Favoriler</h1>
@if(!Model.Any()){
  <div class="alert alert-info">Favori √ºr√ºn bulunmuyor.</div>
}else{
  <div class="row row-cols-1 row-cols-md-3 g-3">
  @foreach(var p in Model){
    <div class="col">
      <div class="card h-100">
        <div class="card-body">
          <div class="display-5 text-center">@Html.Raw(p.Emoji ?? "üõçÔ∏è")</div>
          <h5 class="card-title">@p.Name</h5>
          <p class="text-muted">@p.Description</p>
          <div class="d-flex justify-content-between">
            <strong>@p.Price.ToString("C")</strong>
            <div class="d-flex gap-2">
              <a class="btn btn-outline-secondary" href="@Url.Action("Details","Products", new { id = p.Id })">Detay</a>
              @using (Html.BeginForm("Add","Cart", FormMethod.Post, new { @class="d-inline"})){
                @Html.Hidden("id", p.Id)
                <button class="btn btn-primary">Sepete Ekle</button>
              }
              @using (Html.BeginForm("Toggle","Favorites", FormMethod.Post, new { @class="d-inline"})){
                @Html.Hidden("id", p.Id)
                <button class="btn btn-outline-danger">Kaldƒ±r</button>
              }
            </div>
          </div>
        </div>
      </div>
    </div>
  }
  </div>
}
