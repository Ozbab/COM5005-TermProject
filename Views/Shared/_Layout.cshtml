@{
    Layout = null;
    var user = System.Web.HttpContext.Current.Session["AUTH_USER"] as string;
}
<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@ViewBag.Title - Little Step</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="~/Content/site.css" rel="stylesheet" />
</head>
<body>
  <header class="border-bottom bg-white sticky-top">
    <div class="container d-flex align-items-center justify-content-between py-3">
      <a class="logo fw-bold text-decoration-none" href="@Url.Action("Index","Home")">Little Step</a>
      <nav class="d-flex gap-2">
        <a class="btn btn-outline-light text-dark" href="@Url.Action("Index","Products")">Ürünler</a>
        <a class="btn btn-outline-light text-dark" href="@Url.Action("Index","Favorites")">Favoriler</a>
        <a class="btn btn-outline-light text-dark" href="@Url.Action("Index","Cart")">Sepet</a>
        @Html.Partial("_LoginPartial")
      </nav>
    </div>
  </header>

  <main class="container py-4">
    @RenderBody()
  </main>

  <footer class="border-top py-4 text-center text-muted">
    <div class="container">© 2025 Little Step — Eğitim amaçlı demo</div>
  </footer>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
